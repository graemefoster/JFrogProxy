{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "manifestRoute" : {
        "ClusterId": "containerRegistryCluster",
        "Match": {
          "Path": "/v2/{container}/manifests/{**remainder}"
        },
        "Transforms": [
          {
            "RequestHeader": "Accept",
            "Set": "application/vnd.docker.distribution.manifest.v2+json"
          }
        ]
      },
      "catchAllRoute" : {
        "ClusterId": "containerRegistryCluster",
        "Match": {
          "Path": "{**catch-all}"
        }
      }
    },
    "Clusters": {
      "containerRegistryCluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://grfacrproxytest.azurecr.io/"
          }
        }
      }
    }
  }
}